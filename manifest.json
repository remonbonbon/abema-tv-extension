{
  "name": "Ematv Extension",
  "version": "1.0.2",
  "description": "Extension for https://abema.tv/",
  "permissions": [
    "activeTab",
    "https://api.abema.io/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://abema.tv/*"],
      "run_at": "document_idle",
      "js": [
        "main.js",
        "on-air.js"
      ]
    }
  ],
  "manifest_version": 2
}
